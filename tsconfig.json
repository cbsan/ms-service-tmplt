{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "outDir": "build",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["es2018", "dom", "es5"],
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src"],
  "compileOnSave": false
}
